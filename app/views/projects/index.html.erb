<%= t('Projects') %>

<div class="row">
	<div class="span4">
		<%= render "home/profile" %>
	</div>

	<div class="span8">
		<ul class="nav nav-tabs">
			<li class="active"> <a href="#projects" data-toggle="tab">Projects</a></li>
			<li> <a href="#activities" data-toggle="tab">Activities</a> </li>
